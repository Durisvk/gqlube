{
  "name": "@gqlube/core",
  "version": "0.0.1-alpha.9",
  "description": "Core mechanics and API for GQLube library",
  "keywords": [
    "gqlube",
    "graphql",
    "gql",
    "client"
  ],
  "author": "Juraj Carnogursky <durisvk2@gmail.com>",
  "homepage": "https://github.com/Durisvk/gqlube#readme",
  "license": "ISC",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "typedocMain": "./src/index.ts",
  "module": "dist/index.es5.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Durisvk/gqlube.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' '__tests__/**/*.ts'",
    "build": "tsc --module commonjs && rollup -c rollup.config.js",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "docs": "typedoc ."
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/Durisvk/gqlube/issues"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/nanoassert": "^2.0.1",
    "rollup-plugin-ignore": "^1.0.10",
    "rollup-plugin-polyfill-node": "^0.12.0"
  },
  "dependencies": {
    "nanoassert": "^2.0.0"
  }
}
