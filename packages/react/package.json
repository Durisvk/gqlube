{
  "name": "@gqlube/react",
  "version": "0.0.1",
  "description": "React API for GQLube library",
  "keywords": [
    "gqlube",
    "graphql",
    "gql",
    "client"
  ],
  "author": "Juraj Carnogursky <durisvk2@gmail.com>",
  "homepage": "https://github.com/Durisvk/gqlube#readme",
  "license": "ISC",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "typedocMain": "./src/index.ts",
  "module": "dist/index.es5.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Durisvk/gqlube.git"
  },
  "files": [
    "dist",
    "src",
    "scripts/postinstall.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' '__tests__/**/*.ts'",
    "build": "tsc --module commonjs && rollup -c rollup.config.js",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "docs": "typedoc .",
    "postinstall": "node ./scripts/postinstall.ts"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/Durisvk/gqlube/issues"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@gqlube/core": "^0.0.1-alpha.9",
    "tracekit": "^0.4.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/testing-library__jest-dom": "^5.14.5"
  }
}
